# Production Environment Configuration for dashboard.organizedai.vip
# Claude Code Optimizer Dashboard

# Environment
NODE_ENV=production
VERCEL_ENV=production

# Application Configuration
APP_NAME="Claude Code Optimizer Dashboard"
APP_VERSION="1.0.0"
APP_DOMAIN="dashboard.organizedai.vip"

# API Configuration  
API_BASE_URL="https://dashboard.organizedai.vip/api"
WS_BASE_URL="wss://dashboard.organizedai.vip/ws"

# Security Configuration
CORS_ORIGIN="https://dashboard.organizedai.vip"
SECURE_COOKIES=true
CSRF_PROTECTION=true

# Performance Configuration
CACHE_DURATION=3600
COMPRESSION_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900000

# Monitoring Configuration
ANALYTICS_ENABLED=true
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING=true

# Database Configuration (if using external DB)
# DB_CONNECTION_POOL_SIZE=10
# DB_TIMEOUT=30000

# Feature Flags
CALENDAR_INTEGRATION_ENABLED=true
TOKEN_TRACKING_ENABLED=true
REAL_TIME_UPDATES_ENABLED=true
AGENT_SYSTEM_ENABLED=true

# Third-party Integrations
GOOGLE_CALENDAR_ENABLED=false
APPLE_CALENDAR_ENABLED=false
OUTLOOK_CALENDAR_ENABLED=false

# Advanced Configuration
BATCH_SIZE=50
BATCH_INTERVAL=1000
HEARTBEAT_INTERVAL=30000
MAX_SESSION_DURATION=18000000
TOKEN_PRECISION_THRESHOLD=0.01

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_RETENTION_DAYS=30