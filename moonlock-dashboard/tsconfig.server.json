{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "types": ["node"]
  },
  "include": ["src/server/**/*", "src/shared/**/*"],
  "exclude": ["src/client/**/*", "**/*.test.ts", "**/*.spec.ts"]
}